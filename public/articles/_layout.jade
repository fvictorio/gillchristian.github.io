
include ../_partials/_head
body.hack
  include ../_partials/_header
  //- this is the content section
  main
    div(class="container #{current.source}")
      if current.source === 'index'
        != yield
      else
        h1= title
        p
          i.fa.fa-clock-o
          | #{' ' + date}
        .article
          != yield
          include ../_partials/_author
          include ../_partials/_prev-next
          if public.articles._data[current.source].discuss
            include ../_partials/_comments
  include ../_partials/_footer
